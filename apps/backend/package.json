{
  "name": "backend",
  "scripts": {
    "predev": "twrangler build",
    "dev": "twrangler build && wrangler dev src/index.ts",
    "deploy": "wrangler deploy --minify src/index.ts",
    "db:migrate": "drizzle-kit generate:sqlite",
    "db:push": "wrangler d1 migrations apply remix-hono-turbo-example --local",
    "db:push-remote": "wrangler d1 migrations apply remix-hono-turbo-example --remote"
  },
  "dependencies": {
    "@repo/api": "workspace:^",
    "hono": "^4.2.9"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240423.0",
    "drizzle-kit": "^0.20.17",
    "twrangler": "^0.0.7",
    "wrangler": "^3.53.0"
  }
}
